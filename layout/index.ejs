<%- include partials/banner.ejs %>
<div class="main_container">
	<%- include partials/nav.ejs %>
	<div class="posts">
	 	<% page.posts.each(function(post){ %>
	 		<div class="post">
	 			<div class="title">
	 				<a href="<%- url_for(post.path) %>"><%= post.title %></a>
	 			</div>
		        <div class='date'>
					<%= full_date(post.date, 'll') %> 
				</div>
				<% if (post.tags && post.tags.length){ %>
					<div class="tags">	
					  	<%- list_tags(post.tags, {
					    	show_count: false,
					    	class: 'tag',
					    	style: 'inline',
					    	separator: '',
					    	amount: 4
						}) %>
					</div>
				<% } %>
				<% if(post.excerpt) { %>
					<div class="excerpt"><%- post.excerpt %></div>
					<div class="read_more"><a href="<%- url_for(post.path) %>">Read more</a></div>
				<% } else { %>
					<div class="read_more"><a href="<%- url_for(post.path) %>">Read</a></div>
				<% } %>
	 		</div>
		<% }) %>
	</div>
</div>
<%- include partials/footer.ejs %>